        </component>

        <component id="table-leg-3">
            <transformation>
                <translate x="1.8" y="-1" z="-0.8" />
                <scale x="0.3" y="2" z="0.3" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" length_s="1" length_t="1" />

            <children>
