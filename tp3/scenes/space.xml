            <texture id="none"/>
            <children>
                <!-- <componentref id="RedBlackChameleon" /> -->
                <primitiveref id="game" />
                <!-- <componentref id = "cube" /> -->
                <componentref id = "table" />
                <componentref id = "cubeMap" />
