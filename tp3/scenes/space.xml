        <component id="cube">
            <transformation>       
            <!-- <translate x="0" y="-5" z="0"/>  -->
            </transformation>
            <materials>
                <material id="NeutralMaterial" />
                <!-- <material id="goldenMaterial" />
                <material id="whiteMaterial" />
                <material id="darkerMaterial" /> -->
            </materials>
            <texture id="inherit"/>
            <children>
                <componentref id="cubeFront" />
                <componentref id="cubeBack" />
                <componentref id="cubeTop" />
                <componentref id="cubeBottom" />
                <componentref id="cubeLeft" />
                <componentref id="cubeRight" />
            </children>
        </component>

        <component id="table">
            <transformation>
                <translate x="0" y="-1" z="0" />
                <scale x="4" y="4" z="4" />

            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="cat" length_s="1" length_t="1" />

            <children>
                <componentref id="table-top" />
                <componentref id="table-leg-1" />
                <componentref id="table-leg-2" />
                <componentref id="table-leg-3" />
                <componentref id="table-leg-4" />
            </children>
        </component>

        <component id="table-top">
            <transformation>
               
                <scale x="4" y="0.5" z="2" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
