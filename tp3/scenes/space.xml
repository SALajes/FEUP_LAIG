        </component>

        <component id="cubeRight">
            <transformation>
                <translate x="0.5" y="0" z="0"/>
                <rotate axis="y" angle="-90"/>
                <!-- <scale x="40" y="40" z="0.05"/> -->
                <translate x="-0.5" y="-0.5" z="0"/>
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>
            <texture id="inherit" length_s="1" length_t="1"/>
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>

        <component id="cubeLeft">
            <transformation>
                <translate x="-0.5" y="0" z="0"/>
                <rotate axis="y" angle="90"/>
                <!-- <scale x="40" y="40" z="0.05"/> -->
