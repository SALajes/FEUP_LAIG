<lxs>
    <scene root="Root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="Light" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="Texture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="Transform">
            <translate x="4" y="5" z="6" />
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="Rectangle">
            <rectangle x1="0" y1="0" x2="1" y2="1" />
        </primitive>
        <primitive id="Cylinder">
            <cylinder base="1" top="1" height="2" slices="20" stacks="5"/>
        </primitive>
        <primitive id="Triangle">
            <triangle x1="-1" y1="-1" z1="0" x2="1" y2="-1" z2 = "0" x3="-1" y3="1" z3="0"/>
        </primitive>
        <primitive id="Sphere">
            <sphere radius="1" slices="20" stacks="20"/>
        </primitive>
        <primitive id="Torus">
            <torus inner="1" outer = "5" slices="20" loops="20"/>
        </primitive>
        
    </primitives>

    <components>
        <component id="Field">
            <transformation>
                <scale x="25" y="1" z="50" />
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="Material" />
            </materials>
            <texture id="Texture"/>
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>
        <component id="Goal_Torus">
            <transformation>
                <translate x="12.5" y="20" z="3"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="Texture"/>
            <children>
                <primitiveref id="Torus" />
            </children>
        </component>
        <component id="Goal_Torus2">
            <transformation>
                <translate x="2.5" y="-2" z="3"/>
            </transformation>
            <materials>
                <material id="Material" />
            </materials>
            <texture id="Texture"/>
            <children>
                <componentref id="Goal_Torus" />
            </children>
        </component>
        <component id="Goal_Torus3">
            <transformation>
                <translate x="-2.5" y="-4" z="3"/>
            </transformation>
            <materials> 
                <material id="Material" />
            </materials>
            <texture id="Texture"/>
            <children>
                <componentref id="Goal_Torus" />
            </children>
        </component>
        <component id="Goal_Poll_Big">
            <transformation>
                <translate x="12.5" y="9" z="3"/>
                <scale x="1" y="9" z="1" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="Material" />
            </materials>
            <texture id="Texture"/>
            <children>
                <primitiveref id="Cylinder" />
            </children>
        </component>
        <component id="Goal_Poll_Medium">
            <transformation>
                <translate x="2.5" y="-2" z="0"/>
                <scale x="1" y="7/9" z="1" />
            </transformation>
            <materials>
                <material id="Material" />
            </materials>
            <texture id="Texture"/>
            <children>
                <componentref id="Goal_Poll_Big" />
            </children>
        </component>
        <component id="Goal_Poll_Small">
            <transformation>
                <translate x="-2.5" y="-4" z="0"/>
                <scale x="1" y="3/9" z="1" />
            </transformation>
            <materials>
                <material id="Material" />
            </materials>
            <texture id="Texture"/>
            <children>
                <componentref id="Goal_Poll_Big" />
            </children>
        </component>
        <component id="Goal2">
            <transformation>
                <translate x="12.5" y="0" z="47"/>
                <rotate axis="y" angle="180" />
                <translate x="-12.5" y="0" z="-3"/>
            </transformation>
            <materials>
                <material id="Material" />
            </materials>
            <texture id="Texture"/>
            <children>
                <componentref id="Goal_Torus"/>
                <componenref id="Goal_Torus2"/>
                <componentref id="Goal_Torus3"/>
                <componentref id="Goal_Poll_Big" />
                <componentref id="Goal_Poll_Medium"/>
                <componentref id="Goal_Poll_Small"/>
            </children>
        </component>
        <component id="Bladger">
            <transformation>
                <translate x="12.5" y="0.5" z="25"/>
            </transformation>
            <materials>
                <material id="Material" />
            </materials>
            <texture id="Texture"/>
            <children>
                <primitiveref id="Sphere"/>
            </children>
        </component>
        <component id="Root">
            <transformation> 
            </transformation>
            <materials>
                <material id="Material" />
            </materials>
            <texture id="Texture"/>
            <children>
                <componentref id="Field"/>
                <componentref id="Goal_Torus"/>
                <componenreft id="Goal_Torus2"/>
                <componentref id="Goal_Torus3"/>
                <componentref id="Goal_Poll_Big" />
                <componentref id="Goal_Poll_Medium"/>
                <componentref id="Goal_Poll_Small"/>
                <componentref id="Goal2" />
                <componentref id="Bladger"/>
            </children>
        </component>
    </components>
</lxs>