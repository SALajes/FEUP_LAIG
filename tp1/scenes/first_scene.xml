<lxs>
    <scene root="Root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="Light" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="Texture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="Material" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="Transform">
            <translate x="4" y="5" z="6" />
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="Rectangle">
            <rectangle x1="0" y1="0" x2="1" y2="1" />
        </primitive>
        <primitive id="Cylinder">
            <cylinder radius_bottom="1" radius_top="1" height="2" slices="20" stacks="5"/>
        </primitive>
        <primitive id="Triangle">
            <triangle x1="-1" y1="-1" z1="0" x2="1" y2="-1" z2 = "0" x3="-1" y3="1" z3="0"/>
        </primitive>
        <primitive id="Sphere">
            <sphere radius="1" slices="20" stacks="20"/>
        </primitive>
        <primitive id="Torus">
            <torus inner="1" outer = "5" slices="20" loops="20"/>
        </primitive>
        
    </primitives>

    <components>
        <component id="Field">
            <transformation>
                <scale x="25" y="1" z="50" />
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="Material" />
            </materials>
            <texture id="Texture"/>
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>
        <component id="Root">
            <transformation>
                <translate x="12.5" y="0" z="25"/>
                <scale x="2" y="1" z="2" />
                <rotate axis="x" angle="90"/>
            </transformation>
            <materials>
                <material id="Material" />
            </materials>
            <texture id="Texture"/>
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>
    </components>
</lxs>