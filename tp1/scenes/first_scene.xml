<lxs>
    <scene root="Root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="1" far="500" angle="45">
            <from x="8" y="8" z="8" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="Light" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <textures>
        <texture id="Texture" file="scenes/images/vidral.jpg" />
        <texture id="courtTexture" file="scenes/images/court.jpg" />
        <texture id="griffindorTexture" file="scenes/images/griffindor.png" />
        <texture id="snitchTexture" file="scenes/images/snitch.JPG" />
        <texture id="woodTexture" file="scenes/images/wood.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.5" g="0.5" b="0.5" a="1.0" />
            <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
            <diffuse r="0.1" g="0.1" b="0.1" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="Transform">
            <translate x="4" y="5" z="6" />
            <scale x="1" y="1" z="1" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="Rectangle">
            <rectangle x1="0" y1="0" x2="1" y2="1" />
        </primitive>
        <primitive id="Cylinder">
            <cylinder base="0.1" top="0.1" height="2" slices="20" stacks="5"/>
        </primitive>
        <primitive id="Triangle">
            <triangle x1="0" y1="0" z1="0" x2="1" y2="0" z2 = "0" x3="0" y3="1" z3="0"/>
        </primitive>
        <primitive id="Sphere">
            <sphere radius="1" slices="20" stacks="20"/>
        </primitive>
        <primitive id="Torus">
            <torus inner="0.1" outer = "0.5" slices="20" loops="5"/>
        </primitive>
        
    </primitives>

    <components>
        <component id="Field">
            <transformation>
                <scale x="8" y="1" z="16" />
                <rotate axis="x" angle="90"/>
                <translate x = "-0.5" y = "-0.5" z= "0"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="courtTexture"/>
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>

        <component id="Goal_Torus1">
            <transformation>
                <translate x= "0" y = "2.5" z = "4.5"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="woodTexture"/>
            <children>
                <primitiveref id="Torus" />
            </children>
        </component>
        <component id="Goal_Poll_Big">
            <transformation>
                <translate x = "0" y = "0" z = "4.5" />
                <scale x = "1" y = "1" z= "1"/>
                <rotate axis="x" angle="-90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="woodTexture"/>
            <children>
                <primitiveref id="Cylinder" />
            </children>
        </component>

        <component id="Goal_Torus2">
            <transformation>
                <translate x= "1.25" y = "2" z = "4.5"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="woodTexture"/>
            <children>
                <primitiveref id="Torus" />
            </children>
        </component>

        <component id="Goal_Poll_Medium">
            <transformation>
                <translate x = "1.25" y = "0" z = "4.5" />
                <scale x = "1" y = "0.7" z= "1"/>
                <rotate axis="x" angle="-90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="woodTexture"/>
            <children>
                <primitiveref id="Cylinder" />
            </children>
        </component>

        <component id="Goal_Torus3">
            <transformation>
                <translate x= "-1.25" y = "1.5" z = "4.5"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="woodTexture"/>
            <children>
                <primitiveref id="Torus" />
            </children>
        </component>

        <component id="Goal_Poll_Small">
            <transformation>
                <translate x = "-1.25" y = "0" z = "4.5" />
                <scale x = "1" y = "0.5" z= "1"/>
                <rotate axis="x" angle="-90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="woodTexture"/>
            <children>
                <primitiveref id="Cylinder" />
            </children>
        </component>

         <component id="Goal1">
            <transformation>
                <translate x = "0" y = "0" z = "-9.5"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="woodTexture"/>
            <children>
                <componenref id="Goal_Poll_Big" />
                <componenref id="Goal_Torus1" />
                <componenref id="Goal_Poll_Medium" />
                <componenref id="Goal_Torus2" />
                <componenref id="Goal_Poll_Small" />
                <componenref id="Goal_Torus3" />
            </children>
        </component>

         <component id="Goal2">
            <transformation>
                <rotate axis="y" angle="180"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="woodTexture"/>
            <children>
                <componenref id="Goal1" />
            </children>
        </component>

        <component id="tower_front">
            <transformation>
                <scale x = "1" y = "3" z = "1" />
                <translate x= "-4" y = "0" z = "1" />
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="griffindorTexture"/>
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>
        <component id="tower_left">
            <transformation>
                <translate x = "-4" y = "0" z = "0" />
                <scale x = "1" y = "3" z = "1" />
                <rotate axis = "y" angle = "-90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="griffindorTexture"/>
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>
         <component id="tower_back">
            <transformation>
                <scale x = "1" y = "3" z = "1" />
                <translate x= "-4" y = "1" z = "0" />
                <rotate axis = "x" angle = "180"/>
                
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="griffindorTexture"/>
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>
        <component id="tower_top">
            <transformation>
                <translate x= "-4" y = "3" z = "1" />
                <rotate axis = "x" angle = "-90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="griffindorTexture"/>
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>
        <component id="tower_right">
            <transformation>
                <scale x = "1" y = "3" z = "1" />
                <translate x= "-3" y = "0" z = "1" />
                <rotate axis = "y" angle = "90"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="griffindorTexture"/>
            <children>
                <primitiveref id="Rectangle" />
            </children>
        </component>

        <component id="Tower">
            <transformation>      
                <translate x= "0" y = "0" z = "-0.5" />   
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="griffindorTexture"/>
            <children>
                <componenref id="tower_front" />
                <componenref id="tower_left" />
                <componenref id="tower_back" />
                <componenref id="tower_right" />
                <componenref id="tower_top" />
            </children>
        </component>

        <component id="Tower2">
            <transformation>      
                <translate x= "0" y = "0" z = "-5" />   
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="griffindorTexture"/>
            <children>
                <componenref id="Tower" />
            </children>
        </component>

        <component id="Tower3">
            <transformation>      
                <translate x= "0" y = "0" z = "5" />   
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="griffindorTexture"/>
            <children>
                <componenref id="Tower" />
            </children>
        </component>

        <component id="MirroredTowers">
            <transformation>      
                <rotate axis="y" angle="180"/>   
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="Texture"/>
            <children>
                <componenref id="Tower" />
                <componenref id="Tower2" />
                <componenref id="Tower3" />
            </children>
        </component>

        <component id="wingLeft">
            <transformation>
                <translate x="0.5" y="0" z="-0.5"/>
                <rotate axis="x" angle="90"/>
                <scale x="3" y="1" z="1"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="snitchTexture"/>
            <children>
                <primitiveref id="Triangle"/>
            </children>
        </component>
        <component id="wingRight">
            <transformation>
                <scale x="-1" y="1" z="1"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="snitchTexture"/>
            <children>
                <componentref id="wingLeft"/>
            </children>
        </component>

        <component id="Snitch">
            <transformation>
                <translate x="0" y="2" z="0"/>
                <scale x="0.1" y="0.1" z="0.1"/>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="snitchTexture"/>
            <children>
                <componentref id="wingLeft"/>
                <componentref id="wingRight"/>
                <primitiveref id="Sphere"/>
            </children>
        </component>
        
        <component id="Root">
            <transformation> 
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="Texture"/>
            <children>
                <componentref id="Field" />
                <componentref id="Goal1" />
                <componentref id="Goal2"/>
                <componentref id="Tower"/>
                <componentref id="Tower2"/>
                <componentref id="Tower3"/>
                <componentref id="MirroredTowers"/>
                <componentref id="Snitch"/>
            </children>
        </component>
    </components>
</lxs>