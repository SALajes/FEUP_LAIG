<lxs>
    <scene root="Root" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <globals>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.0" b="0.0" a="1.0" />
    </globals>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
            <attenuation constant="1" linear="0" quadratic="0"/>
        </omni>
    </lights>

    <textures>
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>

    <materials>
        <material id="demoMaterial" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="demoTransform">
            <scale x="5" y="1" z="5" />
            <rotate axis="x" angle="-45" />
            <rotate axis="z" angle="-45" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>
        <primitive id="patch">
             <patch npointsU="3" npointsV="2" npartsU="4" npartsV="4">
                    <controlpoint xx="0.5" yy="0" zz="-0.5" />
                    <controlpoint xx="0.5" yy="0" zz="0.5" />
                    <controlpoint xx="0" yy="0.5" zz="-0.5" />
                    <controlpoint xx="0" yy="0.5" zz="0.5" />
                    <controlpoint xx="-0.5" yy="0" zz="-0.5" />
                    <controlpoint xx="-0.5" yy="0" zz="0.5" />
            </patch>
        </primitive>
        <primitive id="plane">
            <plane npartsU="15" npartsV="15" />
        </primitive>
        <primitive id="cyl2">
            <cylinder2 base="1" top="1" height="2.5" slices="10" stacks="10" />
        </primitive>
        


    </primitives>

    <components>

         <component id="cyl23">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="cyl2" />
            </children>
        </component>
        <component id="patc">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="patch" />
            </children>
        </component>
        <component id="plan">
            <transformation>
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <primitiveref id="plane" />
            </children>
        </component>
        <component id="Root">
            <transformation> 
            </transformation>
            <materials>
                <material id="demoMaterial" />
            </materials>
            <texture id="none"/>
            <children>
                <componentref id="cyl23" />
            </children>
        </component>
    </components>
</lxs>